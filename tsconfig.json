{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        // This allows our source maps to be right in the .js file.
        // That way the server only has to serve up the .ts file when
        // the browser asks for it.
        "inlineSourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // this will put the .js files in the dist folder
        "outDir": "./dist",
        // this will allow grunt to not create the .baseDir.ts file.
        "rootDir": "./src"
    },
    // include all typescript files in the src folder.
    "include": [
        "src/**/*.ts"
    ],
    // exclude .baseDir.ts which is generated by grunt.
    "exclude": [
        "src/.baseDir.ts",
        "src/utils/codeGeneration/**/*.ts"
    ]
}