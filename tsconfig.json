{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // this will put the .js files in the dist folder
        "outDir": "./dist"
    },
    // include all typescript files in the src folder.
    "include": [
        "src/**/*.ts"
    ],
    // exclude .baseDir.ts which is generated by grunt.
    "exclude": [
        "src/.baseDir.ts",
        "src/buildUtils/**/*.ts"
    ]
}